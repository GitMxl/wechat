/* pages/selectCity/selectCity.wxss */
page {
  height: 100%;
  overflow: hidden;
}
.page {
  height: 100%;
  overflow: hidden;
}
/* 搜索框 */
input{
  width: 80%;
  margin: 20rpx auto;
  border: 1px solid #eee;
  border-radius: 32rpx;
  height: 64rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  padding: 0 25rpx;
}
.search-list-box{
display: flex;
flex-direction: row;
justify-content: space-between;
align-items: center;
width: 100%;
}
.search-list-box-select{
  background-color: #eee !important;
}
.search-list-box-name{
  width: 100%;
  position: relative;
  padding: 30rpx 0 30rpx 30rpx;
  font-size: 28rpx;
  color: #333;
}
.search-list-box-name::after{
  content: '';
  position: absolute;
  border-bottom: 1rpx solid #eaeef1;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  bottom: 0;
  right: 30rpx;
  left: 30rpx;

}
/* 定位 */
.location-city{
  padding: 0 30rpx 30rpx;
  background: #fff;
}
.location-city-title{
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999;
}
.location-city-name{
  display: flex;
  align-items: center;
  margin-top: 17rpx;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 30rpx;
  color: #333;
}
.location-city-name image{
  width: 46rpx;
  margin-right: 10rpx;
}
/* 热门城市 */
.hot-city-title{
  height: 48rpx !important;
  padding-left: 30rpx;
  font-size: 24rpx !important;
  line-height: 48rpx !important;
  color: #999;
  background: #f2f5f7 !important;
}
.hot-city-name-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: space-between;
  width: 630rpx;
  padding: 12rpx 90rpx 26rpx 30rpx;
  background: #fff;
}
.hot-city-name-list-box{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 140rpx;
  height: 56rpx;
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #333;
  position: relative;
  border-radius: 56rpx;
  border: 1px solid #ccc;

}
.hot-city-name-list-box-select{
  color: #fff;
  background: #5677fc;
}
/* 全部城市 */
.all-city{
  background-color: #fff;
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-bottom: env(safe-area-inset-bottom);

}
.all-city-letter{
  height: 48rpx;
  padding-left: 30rpx;
  font-size: 24rpx;
  color: #999;
  background: #f2f5f7;
  padding: 0 30rpx;
  display: flex;
  align-items: center;

}
.all-city-name{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.all-city-name-select{
  background-color: #eee !important;
}
.all-city-name-box{
  width: 100%;
  position: relative;
  padding: 30rpx 0 30rpx 30rpx;
  font-size: 28rpx;
  color: #333;
}
.all-city-name-box::after{
  content: '';
  position: absolute;
  border-bottom: 1rpx solid #eaeef1;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  bottom: 0;
  right: 30rpx;
  left: 30rpx;

}
/* 索引 */
.indexes{
  position: fixed;
  right: 20rpx;
  top: 50%;
  transform: translate(0,-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  width: 44rpx;
  height: 375px;
}
.indexes-txt{
  display: inline-block;
  text-align: center;
  font-size: 22rpx;
  width: 44rpx;
  height: 15px;
}
.maxIndexes{
  position: absolute;
  z-index: 20;
  width: 160rpx;
  height: 160rpx;
  left: 50%;
  top: 50%;
  margin-left: -80rpx;
  margin-top: -80rpx;
  border-radius: 80rpx;
  text-align: center;
  line-height: 160rpx;
  font-size: 70rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
}