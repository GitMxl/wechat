/* pages/detail/detail.wxss */

.swiperBox{
  width: 100%;
  border-bottom: 1px solid #eee;
}
.swiperBox image{
  width: 540rpx;
  height: 500rpx;
  margin: 20rpx 0 0 0;
}
.swiperBox swiper{
  width: 100%;
  height: 616rpx;
  text-align: center;
}

.product_title{
  border-bottom: 2px solid #eee;
  box-sizing: border-box;
  padding: 0 0 0 40rpx;
}
.product_name{
  font-weight: bold;
  font-size: 28rpx;
  line-height: 52rpx;
}
.product_trait{
  font-size: 23rpx;
  margin: 0 0 10rpx 0;
}
.product_price{
  font-size: 30rpx;
  color: red;
  margin: 0 0 20rpx 0;
}


.IntroduceParameter{
  width: 100%;
  display: flex;
  justify-content: space-between;
  text-align: center;
  border-bottom: 1px solid #eee;
}
.commProduct{
  width: 50%;
  line-height: 76rpx;
}
.on{
  color: #3a5a7c;
  border-bottom: 1px solid #3a5a7c;
}

/* 详情 */
.productIntroduce image{
  width: 100%;
  display: block;
}

.productIntroduce,.productParameter{
  margin: 0 0 100rpx 0;
}


/* 购买 */
.pay{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  text-align: center;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}
.pay view{
  width: 50%;
  line-height: 100rpx;
}
.payCart{
  background: #ff9800;
  color: white;
}
.payNow{
  background: #e3211e;
  color: white;
}