/**index.wxss**/
/* swiper */
.swiperBox{
  width: 100%;
}
.swiperBox swiper{
  width: 100%;
  height:220rpx;
}
swiper image{
  width: 100%;
  height: 100%;
}

/* product */
.product{
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
}
.productName{
  line-height: 72rpx;
  color: #000;
  border-bottom: 2px solid #efeeed;
  font-size: 28rpx;
  padding: 0 0 0 12rpx;
}
.productList{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.productList_shop{
  width: 50%;
  border-right: 1px solid #eee;
  border-bottom: 1px solid #eee;
  text-align: center;
  box-sizing: border-box;
}
.productList_shop:nth-child(2n){
  border-right: 0px;
}
.productList_shop image{
  width: 220rpx;
  height: 210rpx;
  margin: 48rpx 0;
}
.productList_shop_name{
  font-weight: bold;
  font-size: 26rpx;
  margin: 0 0 16rpx 0;
}
.productList-shop_indroduce{
  display: -webkit-box;
  font-size: 23rpx;
  margin: 0 0 28rpx 0;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.productList_shop_price{
  color: red;
  font-size: 30rpx;
  margin: 0 0 20rpx 0;
}