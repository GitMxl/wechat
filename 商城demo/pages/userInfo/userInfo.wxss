/* pages/userInfo/userInfo.wxss */
.header{
  text-align: center;
}
.header{
  background: url('https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg') no-repeat left top;
  background-size: 100% 100%;
  overflow: hidden;
}
.header image{
  width: 260rpx;
  height: 260rpx;
  border-radius: 50%;
  margin: 20rpx auto 20rpx;
}
.header text{
  line-height: 60rpx;
}
.modeList{
  display: flex;
  align-items: center;
  width: 100%;
  text-align: center;
  flex-wrap: wrap;
  justify-content: space-around;
  font-size: 28rpx;
  padding: 3%;
  box-sizing: border-box;
}
.modeList image{
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
  border: 1px rgb(247, 247, 247) solid;
  border-radius: 50%;
}
.modeList view{
  width: 30%;
  margin: 0 0 25rpx;
  line-height: 55rpx;
}
.exit{
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
}