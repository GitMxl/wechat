/**index.wxss**/

/* 头部 */

.header {
  width: 100%;
  background: url(https://hellorfimg.zcool.cn/preview260/1122607562.jpg) no-repeat left top;
  background-size: 100% 110%;
  overflow: hidden;
}

/* 搜索框 */

.searchbar {
  display: flex;
  width: 88%;
  margin: 15rpx auto 0;
  justify-content: space-around;
  align-items: center;
}

.searchbar input {
  width: 85%;
  height: 50rpx;
  border: 1px solid #8888;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  line-height: 46rpx;
  font-size: 32rpx;
}

/* swiper */

.swiperBox {
  width: 88%;
  margin: 40rpx auto;
}

.swiperBox swiper-item {
  border-radius: 20rpx;
}

.swiperBox image {
  width: 100%;
}

/* 分类 */

.sort-Modul {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
  background: #fff;
  overflow: hidden;
  margin: 0 0 15rpx 0;
}

.sort-Module-List {
  width: 20%;
  text-align: center;
  font-size: 24rpx;
  margin: 20rpx 0 0 0;
}

.sort-Module-List:nth-child(n+6) {
  margin: 20rpx 0 20rpx 0;
}

.sort-Module-List image {
  width: 100%;
}

.active-box {
  width: 100%;
  background: #fff;
  text-align: center;
  margin: 0 0 15rpx 0;
  border-bottom: 1px solid #eee;
}

.active-title {
  position: relative;
  display: inline;
  line-height: 66rpx;
  font-weight: bold;
  color: red;
  font-size: 32rpx;
}

.active-title::after {
  content: '';
  background: red;
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  top: 50%;
  right: -25rpx;
  transform: translate(0, -50%);
  border-radius: 50%;
}

.active-title::before {
  content: '';
  background: red;
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  top: 50%;
  left: -35rpx;
  transform: translate(0, -50%);
  border-radius: 50%;
}

.active-shop {
  border-top: 1px solid #eee;
  display: flex;
  justify-content: space-around;
}

.active-shop-left {
  width: 40%;
  border-right: 1px solid #eee;
  overflow: hidden;
  box-sizing: border-box;
  text-align: left;
}

.active-shop-left>text {
  display: block;
  color: red;
  margin: 40rpx 0 15rpx 30rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.surplus {
  font-size: 28rpx;
  margin: 0 0 50rpx 30rpx;
}

.surplus text {
  background: red;
  color: #fff;
  display: inline-block;
}

.active-shop-left image {
  width: 90%;
  margin: 0 auto;
}

.active-shop-right {
  width: 60%;
  overflow: hidden;
}

.active-shop-right-top {
  display: flex;
  width: 100%;
  border-bottom: 1px solid #eee;
}

.active-shop-right-top view {
  font-size: 28rpx;
  width: 40%;
  text-align: left;
}

.active-shop-right-top view text:first-child {
  color: blue;
  margin: 40rpx 0 0 15rpx;
  font-weight: bold;
}

.active-shop-right-top view text:last-child {
  color: #999;
  font-size: 26rpx;
  margin: 10rpx 0 0 15rpx;
}

.active-shop-right-top image {
  width: 50%;
  margin: 20rpx auto;
}

.active-shop-right-dowm {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
}

.dowm-comm {
  width: 50%;
  text-align: left;
  font-size: 26rpx;
}

.dowm-comm text {
  margin: 30rpx 0 0 15rpx;
}

.dowm-comm text:nth-child(2) {
  margin-top: 5rpx;
  font-size: 24rpx;
  color: #999;
}

.dowm-comm image {
  width: 50%;
  margin: 20rpx auto;
}

.active-shop-right-dowm-left {
  border-right: 1px solid #eee;
  color: burlywood;
}

.active-shop-right-dowm-right {
  color: springgreen;
}

/* 商品推荐 */

.shop-recommend {
  width: 100%;
  background: #fff;
  text-align: center;
  margin: 0 0 15rpx 0;
}

.shop-title {
  position: relative;
  display: inline;
  line-height: 66rpx;
  font-weight: bold;
  color: red;
  font-size: 32rpx;
  text-align: center;
}

.shop-title::after {
  content: '';
  background: red;
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  top: 50%;
  right: -25rpx;
  transform: translate(0, -50%);
  border-radius: 50%;
}

.shop-title::before {
  content: '';
  background: red;
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  top: 50%;
  left: -35rpx;
  transform: translate(0, -50%);
  border-radius: 50%;
}

.shop-recommend-list {
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-top: 1px solid #eee;
  flex-wrap: wrap;
}

.shop-recommend-box {
  width: 49.6%;
  border-right: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.shop-recommend-box:nth-child(2n) {
  border-right: 0;
}

.shop-recommend-box image {
  width: 80%;
  margin: 15rpx auto;
}

.shop-recommend-title {
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-word;
  padding: 0 35rpx;
  font-size: 28rpx;
}

.shop-recommend-price {
  color: red;
  line-height: 60rpx;
  font-weight: bold;
}
